<Window x:Class="Windows_media_player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_media_player"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="White" BorderThickness="1">
            <MediaElement Name="Media" Margin="2" LoadedBehavior="Manual"/>
        </Border>

        <TextBlock Name="MediaName" Grid.Row="1" Foreground="White">No Media</TextBlock>

        <StackPanel Grid.Column="1">
            <Button Click="PlayButton_Click">Play</Button>
            <Button Click="PauseButton_Click">Pause</Button>
            <Button Click="StopButton_Click">Stop</Button>
            <ToggleButton Click="MuteButton_Click" Margin="0 5 0 0">Mute</ToggleButton>

            <TextBlock FontSize="10">Volume</TextBlock>
            <Slider Name="VolumeSlider" Value="0.75" Maximum="1" ValueChanged="VolumeSlider_ValueChanged"/>

            <TextBlock FontSize="10">Balance</TextBlock>
            <Slider Name="BalanceSlider" Value="0" Minimum="-1" Maximum="1" ValueChanged="Balance_ValueChanged"/>

            <TextBlock FontSize="10">Speed</TextBlock>
            <Slider Name="SpeedSlider" Value="1" Minimum="0" Maximum="4" ValueChanged="Speed_ValueChanged" TickPlacement="Both" IsSnapToTickEnabled="True">
                <Slider.Ticks>
                    0, 0.25, 0.5, 1, 2, 4
                </Slider.Ticks>
            </Slider>
        </StackPanel>

        <Button Grid.Row="1" Grid.Column="1" Click="LoadButton_Click">Load</Button>
    </Grid>
</Window>
